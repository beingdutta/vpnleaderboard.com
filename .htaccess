Options -MultiViews
RewriteEngine On
RewriteBase /

# Allow accessing .php files without the extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^(.*)$ $1.php [L]

# Redirect requests for /blogs/some-slug to /blogs/some-slug.php
# This rule is now handled by the general rule above.
# The same applies to /reviews/