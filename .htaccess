RewriteEngine On
RewriteBase /

# Redirect requests for /blogs/some-slug to blog-article.php?slug=some-slug
RewriteRule ^blogs/([\w-]+)/?$ blog-article.php?slug=$1 [L,QSA]

# Redirect requests for /reviews/some-slug to review-article.php?slug=some-slug
RewriteRule ^reviews/([\w-]+)/?$ review-article.php?slug=$1 [L,QSA]

# Prevent direct access to these template files
RewriteCond %{THE_REQUEST} \s/+(blog-article|review-article)\.php [NC]
RewriteRule ^ - [F]